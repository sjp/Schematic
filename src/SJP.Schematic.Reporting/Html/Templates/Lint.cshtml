@using RazorLight
@using SJP.Schematic.Reporting.Html.ViewModels
@inherits TemplatePage<LintResults>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Lint Issues</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Lint Issues</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                @if (Model.LintRulesCount > 0)
                {
                    <div class="callout callout-warning">
                        <p>Issues that might require correcting on about your database and schema.</p>
                    </div>
                }
                else
                {
                    <div class="callout callout-success">
                        <p>No issues detected!</p>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<section class="content">
    @foreach (var lintRule in Model.LintRules)
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fa fa-exclamation-circle">&nbsp;&nbsp;</i>@lintRule.RuleTitle</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>

                    <div class="card-body">
                        <table class="table table-bordered table-hover" role="grid">
                            <thead>
                                <tr>
                                    <th>Message</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (lintRule.MessageCount > 0)
                                {
                                    foreach (var message in lintRule.Messages)
                                    {
                                        <tr>
                                            <td>@Raw(message.ToHtmlString())</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td>No issues detected.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</section>