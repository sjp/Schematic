@using RazorLight
@using SJP.Schematic.Reporting.Html.ViewModels
@inherits TemplatePage<Routines>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Routines</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Routines</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fa fa-code">&nbsp;&nbsp;</i>Routines</h3>
                </div>
                <div class="card-body">
                    <table class="@Raw(Model.RoutinesTableClass.ToHtmlString()) table table-bordered table-hover" role="grid">
                        <thead>
                            <tr>
                                <th>Routine</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RoutinesCount > 0)
                            {
                                foreach (var routine in Model.AllRoutines)
                                {
                                    <tr class="tbl even">
                                        <td>
                                            <a href="routines/@(routine.RoutineUrl).html">@routine.Name</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr class="tbl even">
                                    <td>No routines present.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>